<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 offset-lg-1">
      <h4 class="text-nowrap">ジャンル一覧・追加</h4>
    </div>
  </div>

  <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row-10">
    <div class="col-10 mt-5 mb-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, placeholder: "ジャンル名" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-4">
      <table class="table mt-2">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success text-nowrap" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>