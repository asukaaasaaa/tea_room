<div class="container">
  <div class="row">
    <div class="col-12">
      <div>
        <h3 class="py-4 mb-0">会員一覧</h3>
      </div>
    </div>
    <div class="col-md-10 col-md-offset-1 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == true %>
                <div class="font-weight-bold text-secondary">退会</div>
              <% else %>
                <div class="font-weight-bold text-info">有効</div>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>