<div class="container">

  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-12">
      <div>
        <h3 class="py-4 mb-0"><%= @customer.name %>さんの情報編集</h3>
      </div>
    </div>
    <%= form_with model:@customer, url: admin_customer_path(@customer) do |f| %>
		<table class="table">
			<thead></thead>
			<tbody>
				<tr>
					<th>名前</th>
					<td><%= f.text_field :name, :placeholder =>"#{@customer.name}" %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
				</tr>
				<tr>
					<th>会員ステータス</th>
					<td><%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", class: "text-active" %>
					  <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会済み", class: "text-invalid" %></td>
				</tr>
				<tr class="text-center">
					<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>

  </div>
</div>