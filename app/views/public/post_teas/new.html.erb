<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>New Tea</h2>
      <%= render 'layouts/error', object: @post_tea %>

      <%= form_with model: @post_tea do |f| %>
      <table class="table">
        <tr>
          <td><%= f.label :image %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :title %></td>
          <td><%= f.text_field :title, class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :body %></td>
          <td><%= f.text_area :body, rows:'5', class: "form-control",placeholder: "感想や説明をここに" %></td>
        </tr>
        <tr>
          <td><%= f.label :genre_id %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--お茶の種類--" %></td>
        </tr>
      </table>
      <div class="row">
        <div class="col-5 mx-auto">
        <%= f.submit 'New Post Tea', class: "btn btn-info text-nowrap" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>