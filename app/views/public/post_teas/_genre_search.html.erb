<table class="table table-bordered text-center table-striped">
  <tr>
    <th>Genre</th>
  </tr>
  <tr>
    <td>
      <div class="d-flex flex-column">
        <% @genres.each do |genre| %>
          <%= link_to post_teas_path(genre_id: genre.id), class: "text-dark pt-lg-3 pt-sm-2 pt-1 text" do %>
            <%= genre.name %>
          <% end %>
        <% end %>
      </div>
    </td>
  </tr>
</table>