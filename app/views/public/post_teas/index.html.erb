<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 offset-lg-1">
      <h3 class="text-nowrap">Time Line</h3>
    </div>
  </div>


  <% if customer_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Customer'], ['PostTea']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>



<div class="card-list-container py-5">
  <% @post_teas.each do |post_tea| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_tea_path(post_tea.id) do %>
      <%= image_tag post_tea.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_tea_path(post_tea.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_tea.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">Opinion：<%= post_tea.body %></p>
          <p class="card-text">Genre：<%= post_tea.genre.name %></p>
          <%= link_to customer_path(post_tea.customer.id), class:"text-dark" do %>
            <span><i class="fas fa-user"></i> By <%= post_tea.customer.name %>  </span>
          <% end %>
          <span>| <i class="fas fa-comments"></i> <%= post_tea.comments.count %> | </span>
          <span><i class="fa fa-heart"></i> <%= post_tea.favorites.count %> </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= paginate @post_teas %>

</div>