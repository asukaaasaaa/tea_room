<p><%= flash[:notice] %></p>

<div class="post-detail py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= image_tag @post_tea.get_image, class:"card-img-top" %>
    <div class="card-body">
      <div class="row">
        <div class="col-10">
          <h4 class="card-title">
            <%= link_to(post_tea_path(@post_tea.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @post_tea.title %></span></strong>
            <% end %>
          </h4>
          <p class="card-title">Opinion：<%= @post_tea.body %></p>
          <p class="card-text">Genre : <%= @post_tea.genre.name %></p>
          <hr>
          <span>
            <%= link_to customer_path(@post_tea.customer_id) do %>
            <i class="fas fa-user"></i> By <%= @post_tea.customer.name %><% end %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @post_tea.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <span><i class="fa fa-comment"></i> <%= link_to "#{@post_tea.comments.count}", post_tea_path(@post_tea.id), class:"text-dark" %> ｜ </span>
          <% if @post_tea.favorited_by?(current_customer) %>
            <span>
              <%= link_to(post_tea_favorites_path(@post_tea), class:"text-dark", method: :delete) do %>
                <i class="fa fa-heart" aria-hidden="true"></i> <%= @post_tea.favorites.count %>
              <% end %>
            </span>
            <% else %>
            <span>
              <%= link_to(post_tea_favorites_path(@post_tea), class:"text-dark", method: :post) do %>
                <i class="fa fa-heart" aria-hidden="true"></i> <%= @post_tea.favorites.count %>
              <% end %>
            </span>
          <% end %>
          <% if @post_tea.customer == current_customer %>
            <span> ｜ </span><%= link_to "編集", edit_post_tea_path(@post_tea), class:"text-dark" %>
            <span> ｜ </span><%= link_to "削除", post_tea_path(@post_tea), class:"text-dark", method: :delete, data: { confirm: '本当に削除しますか？' } %>
          <% end %>
        </div>
      </div>
      <div class="comments">
        <% @post_tea.comments.each do |post_comment| %>
          <div class="media border mb-3 mt-2">
            <div class="media-body ml-2 p-2">
              <p><%= post_comment.created_at.strftime('%Y/%m/%d') %>  |  <%= post_comment.customer.name %>さんより</p>
              <div>
                <%= post_comment.comment %>
              <div class="text-right">
              <% if post_comment.customer == current_customer %>
                <%= link_to "削除", post_tea_comment_path(post_comment.post_tea,post_comment), method: :delete, remote: true, class: "btn btn-danger" %>
              <% end %>
              </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="new-comment card-text">
        <%= form_with(model:[@post_tea, @comment]) do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">コメントする</label>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          </div>
          <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>