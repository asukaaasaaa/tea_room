<div class='container'>
  <div class='row'>
    <p><%= flash[:notice] %></p>
    <div class="col-12">
      <h3 class="py-4 mb-0"><%= @customer.name %> さんのProfileページ</h3>
      <p>Introduction : <%= @customer.introduction %></p>
    </div>
    <div class="col-8">
      <div>Follows : <%= link_to @customer.followings.count, customer_followings_path(@customer) %></div>
      <div>Followers : <%= link_to @customer.followers.count, customer_followers_path(@customer) %></div>
    </div>
    <div class="col-4">
      <%= render "public/relationships/btn", customer: @customer %>
    </div>
    </div>
    <div class="col-12">
    <%= render 'public/customers/nav' , customer: @customer %>
    </div>

    <div class="col-12"><h4>My post</h4></div>
    <% @post_teas.each do |post_tea| %>
      <div class="col-md-3 mt-2">

        <div class="card-deck">
        <div class="card border-info" style="width: 15rem;">
          <%= link_to post_tea_path(post_tea.id) do %>
            <%= image_tag post_tea.get_image, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">Title：<%= post_tea.title %></h5>
            <p class="card-text">Genre : <%= post_tea.genre.name %></p>
          </div>
        </div>
        </div>
      </div>
    <% end %>

  </div>
</div>