<div class="container">
  <div class="row">
    <h2>Follow Customers</h2>
      <div class="col-12">
      <% if @customers.exists? %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Name</th>
            <th>Introduction</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= link_to customer_path(customer) do %><%= customer.name %><% end %></td>
            <td><%= customer.introduction %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <% else %>
      <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>
