<header class="sticky-top">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <%= link_to root_path , class:"navbar-brand" do %>
        <h2 class="border border-info" style="color: #ed6d2b;"> Tea Room </h2>
      <% end %>
        <div class="collapse navbar-collapse">
          <% if customer_signed_in? %>
            <p class="text-left mt-3" style="color: #ed6d2b; margin-left: 7%; font-size: 15px;">
              ようこそ、
              <% if current_customer %>
                <%= current_customer.name %>さん
              <% end %>
            </p>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to post_teas_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fas fa-coffee"></i> Timeline
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to customer_path(current_customer.id), class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fas fa-user"></i> Mypage
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_post_tea_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fas fa-plus"></i> New post
                <% end %>
              </li>
              <li class="nav-item">
                <%= button_to destroy_customer_session_path, method: :delete, class: 'nav-link btn btn-sm btn-info mr-3', data: { turbo: false } do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log out
                <% end %>
              </li>
            </ul>
          <% elsif admin_signed_in? %>
            <p class="text-left mt-3" style="color: #ed6d2b; margin-left: 7%; font-size: 15px;">
              ようこそ、管理人さん
            </p>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to admin_root_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                <i class="fas fa-info-circle"></i> Infomation
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                <i class="fas fa-users"></i> Customers
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                <i class="fas fa-utensils"></i> Genre
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                <i class="fa-solid fa-right-from-bracket"></i> Log out
                <% end %>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to root_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fa-solid fa-kitchen-set"></i> About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_registration_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fa-solid fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path, class: 'nav-link btn btn-sm btn-info mr-3' do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
    </div>
  </nav>
</header>